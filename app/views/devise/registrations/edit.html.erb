<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>ユーザー編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>


      <div class="form-group">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
      </div>

    <div class="field">
      <span class="sex">性別</span><br>
    <div class="radio-inline">
        <%= f.radio_button :sex, :男性, checked: "checked" %>
        <%= f.label :男性, class: "sex_label" %>
    </div>
      <div class="radio-inline">
        <%= f.radio_button :sex, :女性, checked: "checked" %>
        <%= f.label :女性, class: "sex_label" %>
        </div>
        <div class="radio-inline">
        <%= f.radio_button :sex, :秘密, checked: "checked" %>
        <%= f.label :秘密, class: "sex_label" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :age, "年齢" %><br />
      <%= f.text_field :age, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :height, "身長" %><br />
      <%= f.text_field :height, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :weight, "体重" %><br />
      <%= f.text_field :weight, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :area_id, "お住み先" %><br />
    <%= f.collection_select :area_id, Area.all, :id, :name, { include_blank: "地域を選択してください" },  { class: "form-control" } %>
    </div>




      <div class="form-group">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %> <i>（入力しない限り変更しません）</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード（再入力）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード" %> <i>（設定を変更する場合は、現在のパスワード入力が必要です）</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-default" %>
      </div>
    <% end %>

    <h3>アカウント削除</h3>

    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に退会しますか？" }, method: :delete, class: "btn btn-default" %>

    <%= link_to "戻る", :back, class: "btn btn-default" %>
  </div>
</div>
